  .header
    .search-fields
      .category.search
        .selected-link
          %span.header-text I want to see:
          %span.currently-selected Events
          .arrow-up
        .menu
          %li.selected Events
          %li Blogs
          %li Pictures
          %li Videos
      .date.search
        .selected-link
          %span.header-text I want to go:
          %span.currently-selected This Week
          .arrow-up
        .menu
          %li{:value => "Today"} Today
          %li.selected{:value => "This Week"} This Week
          %li{:value => "Next Week"} Next Week
          %li{:value => "This Month"} This Month
