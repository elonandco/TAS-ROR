  .section.events.main{:name => "events"}
    .section-name.event Events
    -i = 0
    - 6.times do
      - i = i + 1
      -if i==5
        .content-box.ads-template
          %a{:href => "http://www.theaustinsocialite.com", :target => "_blank"}
            %span Ad Space
      -else
        .content-box.events-template
          .image
            %img{:src => asset_path("event"+i.to_s+".png")}/
          .content
            .overlay
              .sponsored Sponsored
              .date
                %span.dayofweek Friday
                %span.month Sep. 19
              .setting
                %span.type Networking
                %span.title Young Professionals' Happy Hour
                %p.description
    .load-more Load More Events
